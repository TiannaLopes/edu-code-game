{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",  // Use Node module resolution
    "target": "ES2015",
    "lib": ["ES2015", "DOM"],
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
